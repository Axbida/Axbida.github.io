{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Global primary sources of energy consumption",
    "width": 500,
    "height": 400,
    "data": {
        "url": "data/global-energy-substitution.csv"
    },
    "params": [
        {
            "name": "energy_highlight",
            "select": {
                "type": "point",
                "fields": [
                    "Type"
                ]
            },
            "bind": "legend"
        }
    ],
    "mark": "line",
    "encoding": {
        "x": {
            "field": "Year",
            "type": "temporal"
        },
        "y": {
            "field": "Substituted energy (TWh)",
            "type": "quantitative"
        },
        "color": {
            "field": "Type",
            "type": "nominal"
        },
        "tooltip": [
            {
                "field": "Type",
                "type": "nominal"
            },
            {
                "field": "Year",
                "type": "temporal"
            },
            {
                "field": "Substituted energy (TWh)",
                "type": "quantitative",
                "format": ".2f"
            }
        ],
        "opacity": {
            "condition": {
                "param": "energy_highlight",
                "value": 0.6
            },
            "value": 0.2
        }
    }
}