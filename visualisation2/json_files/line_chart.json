{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Global primary sources of energy consumptions",
    "width": 490,
    "height": 365,
    
    "layer": [
        {
            "data": {
                "url": "data/global-energy-substitution.csv"
            },
            "params": [
                {
                    "name": "energy_highlight",
                    "select": {
                        "type": "point",
                        "fields": [
                            "Type"
                        ]
                    },
                    "bind": "legend"
                }
            ],
            "mark": "line",
            "encoding": {
                "x": {
                    "field": "Year",
                    "type": "temporal"
                },
                "y": {
                    "field": "Substituted energy (TWh)",
                    "type": "quantitative"
                },
                "color": {
                    "field": "Type",
                    "type": "nominal"
                },
                "tooltip": [
                    {
                        "field": "Type",
                        "type": "nominal"
                    },
                    {
                        "field": "Year",
                        "type": "temporal"
                    },
                    {
                        "field": "Substituted energy (TWh)",
                        "type": "quantitative",
                        "format": ".2f"
                    }
                ],
                "opacity": {
                    "condition": {
                        "param": "energy_highlight",
                        "value": 0.6
                    },
                    "value": 0.2
                }
            }
        },
        {
            "data": {
                "values": [
                  {"a": 1840, "b": 40000}
               ]
             },
            "mark": {
                "type": "text",
                "align": "right",
                "baseline": "middle",
                "fontSize": 11.5,
                "fontStyle": "italic"
            },
            "encoding": {
                "text": {"value": ["Oil surpasses coal in 1964 to become", "the largest primary source of energy consumpttion"]},
                "color":{"value":"black"},
                "x": {"field": "a", "type": "temporal", "title":"Year"},
                "y": {"field": "b", "type": "quantitative", "title":"Substituted energy (TWh)"}  
            }      
        }
    ]
    
}